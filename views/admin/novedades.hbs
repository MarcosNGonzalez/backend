                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-center">
                            <a  class="btn btn-sm btn-secondary" href="/admin/novedades/modificar/{{id}}">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a class="btn-sm btn-secondary" href="/admin/novedades/eliminar/{{id}}">
                                <i class="fa fa-trash"></i>
                            </a>


                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>











</div>